---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---
<div class="featured-section">
  <img src={image} alt={title} />
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
    <a href={link} class="read-more">Read More â†’</a>
  </div>
</div>

<style>
  .featured-section {
    background: #2e2e2e;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .featured-section:hover {
    transform: translateY(-5px);
  }

  .featured-section img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .content {
    padding: 1.5rem;
  }

  h3 {
    color: rgb(var(--accent-light));
    margin: 0 0 1rem 0;
  }

  p {
    margin: 0 0 1rem 0;
    color: #e0e0e0;
  }

  .read-more {
    color: rgb(var(--accent-light));
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .read-more:hover {
    color: rgb(var(--accent));
  }
</style>